{
  "manifest_version": 3,
  "name": "Auto Refresh with Countdown",
  "version": "1.2",
  "description": "Automatically refreshes the selected tab at a specified interval.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
